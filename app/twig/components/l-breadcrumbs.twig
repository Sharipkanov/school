<ul class="l-breadcrumbs">
    {% for item in items %}
        {% if loop.index != items.length %}
            <li class="l-breadcrumbs__item"><a href="{{ item.url }}" class="l-breadcrumbs__link">{{ item.title }}</a></li>
        {% else %}
            <li class="l-breadcrumbs__item"><span class="l-breadcrumbs__text">{{ item.title }}</span></li>
        {% endif %}
    {% endfor %}
</ul>