{% extends "layouts/app.twig" %}

{% block pageTitle %}Главная страница{% endblock %}

{% block content %}
    <div class="fw-pt-40 fw-pt-80@m fw-pt-150@l fw-pb-40 fw-pb-80@m fw-bg-cover fw-bg-center fw-bg-no-repeat" style="background-image: url('images/welcome-image.jpg')">
